<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/displayAnswer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Answer"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enterNumber"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Enter two numbers" />

        <EditText
            android:id="@+id/enterNumber1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Input Value 1"
            android:textSize="10sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/enterNumber2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Input Value 2 "
            android:textSize="10sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/buttonAddition"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Addition" />

        <Button
            android:id="@+id/buttonSubtraction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Subtraction" />

        <Button
            android:id="@+id/buttonDivision"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Division" />

        <Button
            android:id="@+id/buttonPower"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Power" />

        <EditText
            android:id="@+id/et_squareRootValue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Please enter any number e.g. 225"
            android:gravity="center"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="10"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/buttonSquareRoot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Calculate Square Root" />

        <Button
            android:id="@+id/buttonMultiplication"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Multiplication" />

        <Button
            android:id="@+id/statisticsFunctions"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="statistics Functions" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>